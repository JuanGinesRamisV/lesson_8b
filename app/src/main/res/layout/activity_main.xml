<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            style="@style/TeamText"
            android:id="@+id/team1Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:text="@string/team_1"/>

        <ImageButton
            android:id="@+id/minusButtonTeam1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/team1Text"
            style="@style/MinusButton"
            android:layout_marginStart="10dp" />

        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:id="@+id/team1Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/defaultScore"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/team1Text"
            />
        <ImageButton
            android:id="@+id/plusButtonTeam1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/team1Text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            style="@style/PlusButtons"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            style="@style/TeamText"
            android:id="@+id/team2Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:text="@string/team_2"/>

        <ImageButton
            android:id="@+id/minusButtonTeam2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/team2Text"
            android:layout_marginStart="10dp"
            style="@style/MinusButton"/>

        <TextView
            style="@style/ScoreText"
            android:id="@+id/team2Score"
            android:text="@string/defaultScore"
            android:layout_below="@id/team2Text"
            />
        <ImageButton
            android:id="@+id/plusButtonTeam2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/team2Text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            style="@style/PlusButtons"/>
    </RelativeLayout>

</LinearLayout>